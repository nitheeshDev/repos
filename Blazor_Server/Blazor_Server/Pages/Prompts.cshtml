@page "/prompts"
@using System.Globalization;
@using Microsoft.AspNetCore.Components;
@model Blazor_Server.Pages.PromptsModel
@inject NavigationManager NavigationManager

<h1>Prompts</h1>

@if (Model.Prompts != null && Model.Prompts.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Prompt ID</th>
                <th>Prompt</th>
                <th>Created Date</th>
                <th>Is Active Prompt</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prompt in Model.Prompts)
            {
                <tr>
                    <td>@prompt.PromptId</td>
                    <td>@prompt.Prompt</td>
                    <td>@prompt.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss", CultureInfo.InvariantCulture)</td>
                    <td>@prompt.IsActivePrompt</td>

                    <td>
                        <NavLink class="nav-link" href="@($"Update/{prompt.PromptId}")">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Update
                        </NavLink>
                        <NavLink class="nav-link" href="Prompts">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Delete
                        </NavLink>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No prompts available.</p>
}
<style>
    /* Style the table */
.table {
    width: 100%;
    border-collapse: collapse;
}

/* Style table headers */
.table th {
    background-color: #333;
    color: #fff;
    font-weight: bold;
    padding: 10px;
    text-align: left;
}

/* Style table rows */
.table td {
    padding: 10px;
}

/* Style even rows */
.table tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}

/* Hover effect on rows */
.table tbody tr:hover {
    background-color: #ddd;
}

</style>
